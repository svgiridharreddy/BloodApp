<div class="col-md-4 col-md-offset-4">
<%= form_tag(projects_path, :method => 'get') do %>
  <p>
    <%= label_tag(:q, "Search Blood Group:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>
<table class="table">
  <thead>
  <tr class="danger">                          
    <th>Name</th>
    <th>Blood-group</th>
    <th>Email</th>
    <th>Address</th>
    <th>Send-Email<th>
  </tr>
</thead>
<% @users.each do |u|%>
  <tr class="info">
  <td><%= u.name %></td>
  <td><%= u.blood_group %></td>
  <td><%= u.email %></td>
  <td><%= u.address %></td>
  <td><%= link_to "Send", send_order_mail_path(u) %>
</td>
  </tr>
<% end %>
</table>

